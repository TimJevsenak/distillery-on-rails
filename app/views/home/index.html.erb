<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
<div class="bg">
    <br/>
	<div class="row justify-content-center mb-4 mx-0 pt-dovolj">
                        <div class="col-12 col-md-10 col-lg-8">
                        <%= form_with(url: search_path, method: "get", local: true, class: "card card-sm") do %>
                        
                        
                        
                                <div class="card-body row no-gutters align-items-center">
                                    <div class="col-auto">
                                        <i class="fas fa-search h4 text-body"></i>
                                    </div>
                                    <!--end of col-->
                                    <div class="col">
                                        <%= text_field_tag(:location, "", placeholder: "Search breweries!", type: "search", class: "form-control form-control-lg form-control-borderless") %>
                                    </div>
                                    <!--end of col-->
                                    <div class="col-auto">
                                        <%= submit_tag("Search", class: "btn btn-lg btn-success") %>
                                    </div>
                                    <!--end of col-->
                                </div>
                            <% end %>
                        </div>
                        <!--end of col-->
                    </div>
</div>